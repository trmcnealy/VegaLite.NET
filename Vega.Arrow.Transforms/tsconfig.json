{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",

        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,
        "preserveConstEnums": true,
        "noEmitOnError": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "importHelpers": false,

        "lib": [ "DOM", "ESNext.Array", "ES2017.TypedArrays", "ES2016.Array.Include", "ESNext" ],

        "incremental": true,

        "outDir": "build"
    },
    "files": [ "index.ts" ],
    "include": [
        "src/**/*.ts"
    ]
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "data/movies.json"
  },
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "Rotten_Tomatoes_Rating",
          "type": "quantitative"
        },
        "y": {
          "field": "IMDB_Rating",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "loess": "IMDB_Rating",
          "on": "Rotten_Tomatoes_Rating"
        }
      ],
      "encoding": {
        "x": {
          "field": "Rotten_Tomatoes_Rating",
          "type": "quantitative"
        },
        "y": {
          "field": "IMDB_Rating",
          "type": "quantitative"
        }
      }
    }
  ]
}
